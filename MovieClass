package project;

public class movies {

	
	private String name;		//string variable to hold the name of the movie
	private int price;			//integer variable to hold the price of the movie
	private int theaternumber; //integer to hold the number of the theater that the movie is showing in
	//make an arraylist
	private String[] movieTimes;	//array to hold the times that the movie is being shown
	
	
	public movies(String name, int price, int theaternumber) {		//constructor of the movie object, name is name, price is price
		this.name = name;
		this.price = price;
		this.theaternumber = theaternumber;
	}
	
	public String getName() {		//method to return the name of the movie
		return name;
	}
	
	
	public int getPrice() {		//method to return the rice of the movie
		return price;
	}
	
	public void  changeprice(int x) {		//method to change the price of the movie
		
		price=x;
	}
	
	public void changeTheater(int x) {		//method to change the theater number
		theaternumber=x;
		
	}
	
	public int getTheater() {		//method to return the theater number
		return theaternumber;
	}
	
	public String[] getTimes() {		//method to return the movie times of the movie
		
		return movieTimes;
	}
	
	public void addTimes() {		//method to add movie times
		
		
	}
	
	
	
	
	
}
